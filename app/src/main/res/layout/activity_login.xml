<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lenovo.myapplication.LoginActivity">

    <TextView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:id="@+id/textView3"
        android:text="手机号码"

        android:gravity="center"
        android:layout_marginStart="11dp"
        android:layout_alignTop="@+id/phonenumber"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="验证码"
        android:gravity="center"

        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="密码"
        android:gravity="center"

        android:id="@+id/editText"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />
    <EditText
    android:layout_width="300dp"
    android:layout_height="30dp"
    android:background="#1111"
    android:layout_marginTop="69dp"
    android:id="@+id/phonenumber"
    android:layout_alignParentTop="true"
    android:layout_toEndOf="@+id/textView3"
    android:maxLength="14"
    android:singleLine="true"/>
    <EditText
    android:layout_width="80dp"
    android:layout_height="30dp"
    android:id="@+id/editText3"
    android:background="#1111"
    android:layout_alignTop="@+id/textView4"
    android:layout_toEndOf="@+id/textView4"
    android:maxLength="4"
    android:singleLine="true"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="#1111"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignBottom="@+id/editText"
        android:layout_toEndOf="@+id/editText"
        android:id="@+id/password2"
        android:maxLength="14"
        android:singleLine="true"/>


    <TextView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="#1111"
        android:gravity="center"
        android:text="确认"
        android:layout_marginTop="101dp"
        android:id="@+id/complete"

        android:layout_below="@+id/password2"
        android:layout_alignStart="@+id/password2" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="取消"
        android:gravity="center"
        android:background="#1111"
        android:id="@+id/console"
        android:layout_marginStart="59dp"
        android:layout_alignBaseline="@+id/complete"
        android:layout_alignBottom="@+id/complete"
        android:layout_toEndOf="@+id/editText3" />

</RelativeLayout>
